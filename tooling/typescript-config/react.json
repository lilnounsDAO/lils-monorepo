{
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"],
      "@/ui": ["../../packages/ui/src"],
      "@/config": ["../../packages/config/src"],
      "@/types": ["../../packages/types/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}